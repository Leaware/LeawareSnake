<Application
    x:Class="Snake.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="using:Snake.Converters"
    xmlns:local="using:Snake">

    <Application.Resources>
        <ResourceDictionary>
            <converters:BooleanToShowConverter x:Key="BooleanToShow"/>
            <converters:BooleanToHideConverter x:Key="BooleanToHide"/>
            <converters:IntegerToStringConverter x:Key="IntegerToString"/>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Utils/Colors.xaml"/>
                <ResourceDictionary Source="Utils/Fonts.xaml"/>
                <ResourceDictionary Source="Utils/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
   </Application.Resources>
</Application>
